<% if params[:letter].blank? %>
<h1 class="text-center">All Menus</h1>
<% else %>
<h1 class="text-center">Search: <%= params[:letter] %></h1>
<% end %>
<div class="my-5">
  <div class="d-flex justify-content-between">
    <div class="col-9">
      <%= link_to "Add New +", new_menu_path, class: "btn btn-sm btn-outline-primary" %>
    </div>
    <div class="col-3">
      <%= form_with url: menus_path, method: :get, class: "d-flex" do |form| %>
      <%= form.text_field :letter, class: "form-control form-control-sm me-2", placeholder: "Name"%>
      <%= form.submit 'Search', class: "btn btn-sm btn-outline-success"%>
      <% end %>
    </div>
  </div>
  <table class="table table-hover mt-3">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @menus.each_with_index do |menu, index| %>
      <tr>
        <th><%= index+1 %></th>
        <td><%= menu.name %></td>
        <td><%= menu.price %></td>
        <td><%= menu.description %></td>
        <td><%= link_to "Details", menu_path(menu.id), class: "btn btn-sm btn-outline-secondary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>