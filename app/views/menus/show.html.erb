<h1 class="text-center"><%= @menu.name %></h1>
<div class="my-5">
  <%= link_to "Back to Menus", menus_path, class: "btn btn-sm btn-outline-primary" %>
  <table class="table table-striped table-bordered table-hover mt-3">
    <tr>
      <th class="w-25">ID</th>
      <th><%= @menu.id %></th>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @menu.name %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= @menu.price %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @menu.description %></td>
    </tr>
    <tr>
      <th>Category</th>
      <td>
        <%= @menu.categories.collect(&:name).join(', ') %>
      </td>
    </tr>
    <tr>
      <th>Action</th>
      <td>
        <div class="d-flex flex-row">
        <%= link_to "Edit", edit_menu_path(@menu.id), class: "btn btn-sm btn-outline-warning" %>
        <%= button_to "Delete", menu_path(@menu.id), method: :delete, class:"btn btn-sm btn-outline-danger ms-3" %>
        </div>
      </td>
    </tr>
  </table>
</div>