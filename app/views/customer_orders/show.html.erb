<h1 class="text-center">Customer Order: <%= @customer_order.name %></h1>
<div class="my-5">
  <%= link_to "Back to Customer Orders", customer_orders_path, class: "btn btn-sm btn-outline-primary" %>
  <table class="table table-striped table-bordered table-hover mt-3">
    <tr>
      <th class="w-25">ID</th>
      <th><%= @customer_order.id %></th>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @customer_order.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @customer_order.email %></td>
    </tr>
    <tr>
      <th>Total Price</th>
      <td><%= @customer_order.total_price %></td>
    </tr>
    <tr>
      <th>Status</th>
      <td>
        <%= @customer_order.status %>
      </td>
    </tr>
    <tr>
      <th>Menus</th>
      <td>
        <table class="table table-striped table-bordered table-hover">
          <tr>
      <th>QTY</th>
      <th>Menu</th>
            <th>Price</th>
            <th>Total Price per Menu</th>
    </tr>
          <% @customer_order.order_details.each do |order_detail| %>
          <tr>
      <td><%= order_detail.qty %></td>
            <td><%= order_detail.menu.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.qty.to_f * order_detail.price.to_f  %></td>
      
    </tr>
        
    <% end %>
    </table>
    <tr>
      <th>Action</th>
      <td>
        <div class="d-flex flex-row">
          <%= link_to "Update Status", edit_customer_order_path(@customer_order.id), class: "btn btn-sm btn-outline-warning" %>
          <%= button_to "Delete", customer_order_path(@customer_order.id), method: :delete, class:"btn btn-sm btn-outline-danger ms-3" %>
        </div>
      </td>
    </tr>
  </table>
</div>